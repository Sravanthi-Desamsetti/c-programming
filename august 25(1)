#include<stdio.h>
int main()
{
    int i,count=1;
    char str[50];
    printf("Enter a string");
    scanf("%[^\n]s",str);
    for(i=0;str[i]!='\0';i++)
    {
        if(str[i]==' ')
        count++;
    }
    printf("No.of words=%d",count);
    return 0;
}
Enter a string i love india
i love india
No.of words=3
