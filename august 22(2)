#include<stdio.h>
int main()
{
	int a[100][100];
	int i,j,r,c,n,sum;
	printf("Enter how many rows \n");
	scanf("%d",&r);
	printf("Enter how many cols \n");
	scanf("%d",&c);
	printf("Enter elements into array \n");
	for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
			scanf("%d",&a[i][j]);
		}
	}
	printf("enter the column to add ");
   scanf("%d",&n);
	for(i=n;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
		  sum=sum+a[j][i];
		}
		printf(" %d column sum= %d \n",n,sum);
		break;
	}
	return 0;
}
