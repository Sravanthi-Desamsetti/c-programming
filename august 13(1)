#include <stdio.h>
int main()
{
   int i,j,n;
   char CH='A',ch='a';
   printf("Enter a number:");
   scanf("%d",&n);
   for(i=1;i<=n;i++)
    {
      for(j=1;j<=i;j++)
      {
        printf("%c%c\t",CH,ch);
        CH++;
        ch++;
      }
     printf("\n");
     }
    return 0;
}
output:

Enter any number:5
Aa 	
Bb 	Cc 	
Dd 	Ee 	Ff 	
Gg 	Hh 	Ii 	Jj 	
Kk 	Ll 	Mm 	Nn 	Oo 	
