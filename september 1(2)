#include<stdio.h>
void main() 
{
    int n,ans;
    printf("enter a number:");
    scanf("%d",&n);
    ans=fact(n);
    printf("factorial of %d=%d",n,ans);
}
int fact (int n)
{
    int i=1,sum=1;
    while(i<=n)
    {
        sum=sum*i;
        i++;
    }
    return (sum);
}
output:
enter a number:5
factorial of 5=120
